@using Newtonsoft.Json;
@using RSWMonitor.MainApp.Models;
@{
    ViewData["Title"] = "HealthChecks Management";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Configurations>

<div class="container text-center">
    <div class="modal fade" id="add-configuration" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add configuration</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                    <form name="add-configuration-form" method="post" asp-controller="ManageRemoteMonitors" asp-action="AddConfiguration">
                        <div class="modal-body">
                            <div class="input-group input-group-sm mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-sm">Configuration name</span>
                                <input type="text" name="configuration-name" placeholder="Name..." class="form-control" aria-label="Configuration name" aria-describedby="inputGroup-sizing-sm">
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-sm">Configuration URI</span>
                                <input type="text" name="uri" placeholder="https://test.org/health" class="form-control" aria-label="Configuration name" aria-describedby="inputGroup-sizing-sm">
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <label class="input-group-text" for="inputGroupSelect01">Type of configuration</label>
                                <select class="form-select" name="type" id="inputGroupSelect01">
                                    <option value="db-mon" selected>Database monitoring</option>
                                    <option value="srvc-mon">Service monitoring</option>
                                    <option value="app-mon">App monitoring</option>
                                    <option value="url-mon">URL monitoring</option>
                                </select>
                            </div>
                            <div class="form-check text-start">
                                <input class="form-check-input" type="checkbox" name="has-controls" value="" id="has-controls">
                                <label class="form-check-label" for="has-controls">
                                    Has controls?
                                </label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success btn-ok">Add</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-configurations-tab" data-bs-toggle="tab" data-bs-target="#nav-configurations" type="button" role="tab" aria-controls="nav-configurations" aria-selected="true">Configurations</button>
            <button class="nav-link" id="nav-logs-tab" data-bs-toggle="tab" data-bs-target="#nav-logs" type="button" role="tab" aria-controls="nav-lgos" aria-selected="false">Logs</button>
        </div>
    </nav>
    <br />
    <div class="tab-content row col-12" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-configurations" role="tabpanel" aria-labelledby="nav-configurations-tab" tabindex="0">
            <div class="row">
                <div class="col-7">
                    <h1 class="text-start">Configurations</h1>

                </div>
                <div class="col-3 mt-2">
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#add-configuration"><i class="bi bi-plus-square"></i> Add configuration</button>

                </div>
                <div class="col-2 mt-2">
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Count</label>
                            <select class="form-select" id="inputGroupSelect01">
                                <option value="50" selected>50</option>
                                <option value="100">100</option>
                                <option value="150">150</option>
                            </select>
                        </div>
                </div>

            </div>
            <table class="table table-striped table-sm">
                <tr class="sticky-table-headers bg-light"><th>#</th><th>Name</th><th>URI</th><th>Configuration type</th><th>Controls (WIP)</th><th class="text-danger"><i class="bi bi-trash"></i></th></tr>
                @foreach(var configuration in Model)
                {
                    int index = (Model).IndexOf(configuration) + 1;
                    <tr>
                        <td>@index</td>
                        <td>@configuration.Name</td>
                        <td>@configuration.Uri</td>
                        
                            
                            @try {
                                if (configuration.DiscoveryService == null)
                                {
                                    throw new Exception();
                                }
                                ConfigurationsAdditionalData? ConfigurationsAdditionalData = JsonConvert.DeserializeObject<ConfigurationsAdditionalData>(configuration.DiscoveryService);
                                <td>
                                    @ConfigurationsAdditionalData?.configurationType
                                </td>
                                <td>
                                    @if (ConfigurationsAdditionalData.hasControls)
                                    {
                                        <div class="btn-group" role="group" aria-label="Basic example">
                                            <button type="button" class="btn btn-outline-success btn-sm"><i class="bi bi-play-fill"></i></button>
                                            <button type="button" class="btn btn-outline-warning btn-sm"><i class="bi bi-arrow-clockwise"></i></button>
                                            <button type="button" class="btn btn-outline-danger btn-sm"><i class="bi bi-stop-fill"></i></button>
                                        </div>
                                    } else {
                                        <button type="button" title="No controls configured" class="btn btn-outline-secondary btn-sm disabled"><i class="bi bi-slash-circle"></i></button>
                                    }

                                </td>
                            } catch (Exception ex)
                            {
                                <td class="fst-italic">Data not present</td>
                                <td>
                                <button type="button" title="No controls configured" class="btn btn-outline-secondary btn-sm disabled"><i class="bi bi-slash-circle"></i></button>
                                </td>

                            }
                        
                        <td><button type="button" data-onlick="removeConfiguration(@configuration.Id)" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button></td>
                    </tr>
                }
            </table>
        </div>
        <div class="tab-pane fade" id="nav-logs" role="tabpanel" aria-labelledby="nav-logs-tab" tabindex="0">
            @*<h1 class="text-start">Logs</h1>
            <table class="table table-striped table-sm">
                <tr class="sticky-table-headers bg-light"><th>#</th><th>Name</th><th>URI</th><th>Controls (WIP)</th><th class="text-danger"><i class="bi bi-trash"></i></th></tr>
            </table>*@
        </div>
    </div>
</div>